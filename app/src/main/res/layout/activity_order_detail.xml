<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_order_detail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заказ #0000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_order_detail_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Итого: 0 руб."
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_order_detail_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статус: "
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_order_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата: "
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_order_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Адрес доставки: "
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Состав заказа:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</ScrollView>