<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_order_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:contentDescription="Изображение товара в заказе"
        android:src="@drawable/loading"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tv_order_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название товара"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_order_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена: 0 руб."
            android:textSize="12sp"
            android:textColor="@color/design_default_color_primary"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_order_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Кол-во: 0"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</LinearLayout>